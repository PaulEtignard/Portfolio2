{% extends 'base.html.twig' %}

{% block title %}{{ langage.nom }}{% endblock %}

{% block body %}
    <h1>Liste des Langage + ou - maitrisé :</h1>

        <div class="card mt-4">
            <div class="card-header">
                <h3>{{ langage.nom }}</h3>
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    Désciption:
                    {%if langage.description is not empty %}
                        <p>{{ langage.description }}</p>
                    {% endif %}
                    <footer class="blockquote-footer">
                        Maitrise :
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: {{ langage.maitrise *10 }}%" aria-valuenow="{{ langage.maitrise }}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </footer>
                </blockquote>
            </div>

        </div>
    <div class="d-flex ms-2 mb-2 mt-3">
        <a class="btn" href="{{ path('app_projets') }}">Revenir a la liste des Projets</a>
        <a class="btn ms-3" href="{{ path('app_langages') }}">Revenir a la liste des Langages</a>
    </div>

{% endblock %}
